{
  "name": "covid19",
  "version": "1.0.0",
  "description": "広島県 新型コロナウイルス感染症 情報まとめサイト",
  "author": "広島県 広島市立大学　ネットワーク科学研究室",
  "private": true,
  "engines": {
    "node": ">=10.19.0"
  },
  "scripts": {
    "dev": "cross-env NODE_ENV=development nuxt-ts",
    "build": "nuxt-ts build",
    "start": "cross-env NODE_ENV=production nuxt-ts start",
    "generate:deploy": "nuxt-ts generate",
    "generate": "eslint './**/*.{js,ts,vue}' && nuxt-ts generate",
    "lint-and-generate": "eslint './**/*.{js,ts,vue}' && nuxt-ts generate",
    "test": "echo 'skip tests (there is no test)'",
    "lint": "eslint './**/*.{js,ts,vue}' --fix",
    "clean-hardsource": "rimraf ./node_modules/.cache/hard-source"
  },
  "lint-staged": {
    "*.{js,ts,vue}": [
      "eslint --fix",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "dependencies": {
    "@nuxt/typescript-runtime": "^0.4.8",
    "@nuxtjs/axios": "^5.10.3",
    "@nuxtjs/dotenv": "^1.4.0",
    "@nuxtjs/pwa": "^3.0.0-0",
    "babel-cli": "^6.26.0",
    "chart.js": "^2.9.3",
    "cross-env": "^5.2.0",
    "dayjs": "^1.8.28",
    "express": "^4.16.4",
    "nuxt": "^2.12.2",
    "nuxt-i18n": "^6.12.2",
    "vue-chartjs": "^3.5.0",
    "vue-property-decorator": "^8.4.2",
    "vue-scrollto": "^2.18.1",
    "vue-spinner": "^1.0.3"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.9.0",
    "@fullhuman/postcss-purgecss": "^2.2.0",
    "@mdi/font": "^4.9.95",
    "@nuxt/typescript-build": "^0.6.6",
    "@nuxtjs/eslint-config-typescript": "^1.0.2",
    "@nuxtjs/google-analytics": "^2.3.0",
    "@nuxtjs/vuetify": "^1.11.2",
    "@types/chart.js": "^2.9.21",
    "@vue/test-utils": "^1.0.3",
    "autoprefixer": "^9.8.0",
    "babel-preset-env": "^1.7.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.3",
    "husky": "^4.2.5",
    "jest": "^24.1.0",
    "lint-staged": "^10.2.7",
    "nodemon": "^1.18.9",
    "nuxt-purgecss": "^0.2.1",
    "nuxt-svg-loader": "^1.2.0",
    "prettier": "^1.19.1",
    "rimraf": "^3.0.2",
    "vue-jest": "^4.0.0-0"
  },
  "browserslist": [
    "defaults",
    "ie >=11"
  ]
}
